{
  "name": "ps_211",
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@9.2.0",
  "scripts": {
    "dev": "slidev",
    "build:lecture": "slidev build ${npm_config_lecture}.md --base /$npm_package_name/${npm_config_lecture}/ --out dist/${npm_config_lecture}",
    "export:lecture": "slidev export ${npm_config_lecture}.md --wait 1000 --per-slide --output ./${npm_config_lecture}.pdf",
    "build": "echo \"Use: pnpm run build:lecture --lecture=<name> (e.g., lecture2)\" && exit 0",
    "export": "echo \"Use: pnpm run export:lecture --lecture=<name>\" && exit 0"
  },
    "devDependencies": {
      "@slidev/cli": "^52.1.0",
      "@slidev/theme-default": "latest",
      "@slidev/theme-seriph": "latest",
      "slidev-theme-neversink": "^0.3.6",
      "vue": "^3.5.18"
    },
    "dependencies": {
      "@slidev/cli": "52.1.0",
      "@slidev/theme-default": "0.25.0",
      "@slidev/theme-seriph": "0.25.0",
      "slidev-theme-neversink": "0.3.6",
      "vue": "3.5.19"
    }
  }
